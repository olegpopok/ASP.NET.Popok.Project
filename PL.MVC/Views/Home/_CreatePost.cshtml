@model PL.MVC.Models.Post.CreatePostModel

@{
    var options = new AjaxOptions()
    {
        UpdateTargetId = "posts",
        HttpMethod = "Post"
    };
}
@using (Ajax.BeginForm("Create", "Post", null, options, new { id = "new-post", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
    @Html.EditorFor(model => model.Photo)<br>
    @Html.EditorFor(model => model.Description)<br>
    
    <input type="submit" value="submit"/>
}